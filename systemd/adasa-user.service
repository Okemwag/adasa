[Unit]
Description=Adasa Process Manager (User Service)
Documentation=https://github.com/Okemwag/adasa
After=network.target

[Service]
Type=forking
ExecStart=%h/.cargo/bin/adasa daemon start
ExecStop=%h/.cargo/bin/adasa daemon stop
ExecReload=%h/.cargo/bin/adasa daemon restart
Restart=on-failure
RestartSec=5s
TimeoutStopSec=30s

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=default.target
